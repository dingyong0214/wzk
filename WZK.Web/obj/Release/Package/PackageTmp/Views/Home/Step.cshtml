@model Vote.Entity.ElectionProcess
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <title></title>
    <link href="/skin/css/mui.min.css" rel="stylesheet" />
    <style>
        .mui-content {
            padding-bottom: 50px;
        }

        .box {
            height: 300px;
            position: fixed;
            top: 50%;
            margin-top: -150px;
            text-align: center;
            width: 100%;
        }

        .logo {
            margin: 40px auto;
            display: block;
            width: 180px;
        }

        .color {
            color: #007aff;
            font-family: "微软雅黑";
        }

        .mui-btn-block {
            position: fixed;
            bottom: 0;
            margin: 0 !important;
            border-radius: 0;
            z-index: 9999;
        }

        .logo2 {
            margin: 40px auto;
            display: block;
            width: 180px;
        }

        .center {
            text-align: center;
            color: #007aff;
            font-family: "微软雅黑";
            margin-bottom: 20px;
            margin-top: 20px;
        }

        .box2 {
            padding: 15px;
        }
    </style>
</head>
<body>
    <header class="mui-bar mui-bar-nav">
        <a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
        <h1 class="mui-title">@Model.StepName</h1>
    </header>
    <button class="mui-btn  mui-btn-block @(Model.State==0?" mui-btn-grey":" mui-btn-primary")" id="btnOperater">进入投票</button>
    <div class="mui-content">
        @if (Model.State == 0)
        {
            <div class="box">
                <img src="/skin/img/1.png" class="logo" />
                <div class="color"> 投票还未开始哦~</div>
            </div>
        }
        else
        {
            <div class="box2">
                <div class="center">深圳内江商会第一届会员大会第一次会议</div>
                <img src="/skin/img/1.png" class="logo2" />
                <p>1、所有投票均选取无记名投票方式；</p>
                <p>2、在每个竞选人后的赞成、反对、弃权中选择一项进行投票；</p>
                <p>3、投票提交后无法查看投票记录，请慎重投票；</p>
                <p>4、纸质上的选项保持与系统中的一致，避免统计误差；</p>
                <p>5、投票结束后请等待系统出结果。</p>
            </div>
        }
      
    </div>
    <script type="text/javascript" src="/skin/js/mui.min.js"></script>
    <script>
        var btnOperater = document.getElementById('btnOperater');
        btnOperater.addEventListener('tap', function () {
            switch ('@Model.State') {
                case '1':
                    location.href = '@Url.Action("Vote",new {id=Model.Id })';
                    break;
                case '2':
                    location.href = '@Url.Action("VoteResult",new{ id=Model.Id})';
                    break;
                default:
                    break;
            }
        });
    </script>
</body>
</html>
